<!DOCTYPE html>
<html lang="en">
    {{> head }}

    <body>
        {{> loader }}

        <div id="pcoded" class="pcoded">
            <div class="pcoded-overlay-box"></div>
            <div class="pcoded-container navbar-wrapper">
                {{> header }}

                <div class="pcoded-main-container">
                    <div class="pcoded-wrapper">
                        {{> sidebar }}

                        <div class="pcoded-content">
                            <div class="page-header">
                                <div class="page-block">
                                    <div class="row align-items-center">
                                        <div class="col-md-8">
                                            <div class="page-header-title">
                                                <h5 class="m-b-10">CATEGORIES</h5>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <a href="addCategory" class="waves-effect waves-dark">
                                        <span><i class="fa fa-plus" aria-hidden="true"></i> Add Cateory</span>
                                    </a>
                                </div>
                                <div class="card-block table-border-style">
                                    <div class="table-responsive">
                                        <table class="table" id="myTable1" width="100%" cellspacing="0" data-s-dom="lrtip">
                                            <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Image</th>
                                                    <th>Title</th>
                                                    <th>Status</th>
                                                    <th>Created At</th>
                                                    <th>Action</th>
                                                    <th>More Detail</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each record}}

                                                <tr>
                                                    <td>{{this.id}}</td>
                                                    <td><img src={{this.image}} height="40px" width="40px"></td>
                                                    <td>{{this.title}}</td>
                                                    <td>{{this.status}}</td>
                                                    <td>{{this.created_at}}</td>
                                                    <td>
                                                        <a href="/viewCategory/{{this.id}}" data-toggle="tooltip" title="View"><i class="fa fa-eye close-card"></i></a>
                                                        <a href="/editCategory/{{this.id}}" data-toggle="tooltip" title="Edit"><i class="fa fa-pencil close-card"></i></a>
                                                    </td>
                                                    <td>
                                                        <button id="sub-category" data-attr-key="{{this.id}}" class="py-1 pl-2 pr-2 btn btn-primary waves-effect waves-light">Sub Categories</button>
                                                        <form id="sub-category-{{this.id}}" action="subCategory/{{this.id}}" method="GET" style="display: none;"></form>
                                                    </td>     
                                                </tr>
                                                {{/each}}

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{> script }}

        <script>
            $(document).on('click',"#sub-category",function(e){
                e.preventDefault();
                var key = $(this).attr('data-attr-key');
                $('#sub-category-'+key).submit();
            })
        </script>
    </body>
</html>
