<!DOCTYPE html>
<html lang="en">
    {{> head }}

    <body>
        {{> loader }}

        <div id="pcoded" class="pcoded">
            <div class="pcoded-overlay-box"></div>
            <div class="pcoded-container navbar-wrapper">
                {{> header }}

                <div class="pcoded-main-container">
                    <div class="pcoded-wrapper">
                        {{> sidebar }}

                        <div class="pcoded-content">
                            <div class="page-header">
                                <div class="page-block">
                                    <div class="row align-items-center">
                                        <div class="col-md-8">
                                            <div class="page-header-title">
                                                <h5 class="m-b-10">COMMERCIAL ESTABLISHMENT PRODUCTS</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="pcoded-inner-content">
                                <div class="main-body">
                                    <div class="page-wrapper">
                                        <div class="page-body">
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="card">
                                                        <div class="card-header">
                                                            <h5>View CE Product Detail</h5>
                                                        </div>
                                                        <div class="card-block">
                                                            <div class="row">
                                                                <div class="col-md-12">                                                                
                                                                    <div class="row">
                                                                        <div class="col-md-12"> 
                                                                            <div class="">
                                                                                <p><span style="font-weight: 700;">Title: </span> {{data.title}}</p>
                                                                            </div>
                                                                            <div class="">
                                                                                <p><span style="font-weight: 700;">Amount (USD): </span> {{data.amount}}</p>
                                                                            </div>
                                                                            <div class="">
                                                                                <p><span style="font-weight: 700;">Discount (%): </span> {{data.discount}}</p>
                                                                            </div>
                                                                            <div class="">
                                                                                <p><span style="font-weight: 700;">Final Amount (USD): </span> {{data.final_amount}}</p>
                                                                            </div>
                                                                            <div class="">
                                                                                <p><span style="font-weight: 700;">Quantity: </span> {{data.quantity}}</p>
                                                                            </div>
                                                                            <div class="mt-3">
                                                                                <p><span style="font-weight: 700;">Is Approved: </span> {{#ifEquals this.is_approved '0'}} No {{else}} Yes {{/ifEquals}}</p>
                                                                            </div>
                                                                            <div class="mt-3">
                                                                                <p><span style="font-weight: 700;">Status: </span> {{data.status}}</p>
                                                                            </div>
                                                                            <div class="mt-3">
                                                                                <p><span style="font-weight: 700;">Created At: </span> {{data.created_at}}</p>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="row">
                                                                        <div class="productWrapView">
                                                                            {{#each data.product_images}}

                                                                            <div class="productViewFlex">
                                                                                <div class="productView">
                                                                                    <div class="productViewPic">
                                                                                        <img class="img-80 img-radius" src="{{this.image}}" alt="Image">
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                            {{/each}}

                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-12"> 
                                                                        <div class="row">
                                                                            <div class="productViewData">
                                                                                <h4>Description</h3>
                                                                                <p>{{data.description}}</p>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       {{> script }}

    </body>
</html>
